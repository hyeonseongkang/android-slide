<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="slideView"
            type="com.example.slideapp.models.SlideView" />

        <variable
            name="selectedSlideView"
            type="com.example.slideapp.models.SlideView" />

        <variable
            name="viewModel"
            type="com.example.slideapp.viewmodels.SlideViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

        <View
            android:id="@+id/left_view"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_slide_list"
            android:layout_width="180dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/btn_add_slide"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/adapter_slide_view_item" />

        <View
            android:id="@+id/btn_add_slide"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_add_slide"
            android:onClick="@{() -> viewModel.setSlideSquareView()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_slide_list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_slide_txt"
            android:textColor="@color/face_book"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/rv_slide_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_add_slide" />

        <View
            android:id="@+id/right_view"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_property_modification"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/right_view"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_background_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/background_color_txt"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/btn_background_color"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:onClick="@{() -> viewModel.randomBackgroundColor(selectedSlideView)}"
                app:cardCornerRadius="10dp"
                app:color="@{slideView.square.backgroundColor}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_background_color"
                app:type="@{slideView.type}" />

            <TextView
                android:id="@+id/tv_background_color_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:alpha="@{viewModel.alphaValue}"
                app:color="@{viewModel.backgroundColor}"
                app:layout_constraintBottom_toBottomOf="@id/btn_background_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/btn_background_color"
                app:type="@{slideView.type}"
                tools:text="#OxFF00CC" />


            <TextView
                android:id="@+id/tv_alpha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/alpha_txt"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_background_color" />

            <TextView
                android:id="@+id/tv_alpha_txt"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="end"
                android:padding="5dp"
                android:text="@{String.valueOf(viewModel.alphaValue)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_alpha"
                tools:text="9" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_alpha_frame"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_alpha_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_alpha_txt"
                app:layout_constraintTop_toBottomOf="@id/tv_alpha">

                <TextView
                    android:id="@+id/btn_alpha_minus"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/btn_minus"
                    android:gravity="center"
                    android:onClick="@{() -> viewModel.alphaMinus(selectedSlideView.alpha)}"
                    android:text="@string/minus"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_alpha_plus"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/btn_alpha_plus"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/btn_plus"
                    android:gravity="center"
                    android:onClick="@{() -> viewModel.alphaPlus(selectedSlideView.alpha)}"
                    android:text="@string/plus"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_alpha_minus"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/btn_reset_slide_view"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@color/face_book"
                android:gravity="center"
                android:onClick="@{() -> viewModel.resetSlideView()}"
                android:text="@string/newdocs"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_alpha_frame"
                app:layout_goneMarginTop="20dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/center_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintBottom_toTopOf="@id/bottom_view"
            app:layout_constraintDimensionRatio="H,4:3"
            app:layout_constraintEnd_toStartOf="@id/right_view"
            app:layout_constraintStart_toEndOf="@id/left_view"
            app:layout_constraintTop_toBottomOf="@id/top_view" />

        <View
            android:id="@+id/top_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/dark_gray"
            app:layout_constraintEnd_toStartOf="@id/right_view"
            app:layout_constraintStart_toEndOf="@+id/left_view"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/bottom_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/dark_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/right_view"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/left_view" />

        <com.example.slideapp.view.CustomView
            android:id="@+id/square_view"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toTopOf="@id/bottom_view"
            app:layout_constraintEnd_toStartOf="@id/right_view"
            app:layout_constraintStart_toEndOf="@id/left_view"
            app:layout_constraintTop_toBottomOf="@id/top_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>